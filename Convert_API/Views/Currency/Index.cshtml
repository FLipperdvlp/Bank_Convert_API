@model Convert_API.Models.ConvertViewModel

<h2>Конвертер валют</h2>

<form asp-action="Index" method="post">
    <div>
        <label asp-for="From"></label>
        <select asp-for="From">
            <option>USD</option>
            <option>EUR</option>
            <option>UAH</option>
            <option>BTC</option>
        </select>
        <span asp-validation-for="From"></span>
    </div>
    <div>
        <label asp-for="To"></label>
        <select asp-for="To">
            <option>UAH</option>
            <option>USD</option>
            <option>EUR</option>
            <option>BTC</option>
        </select>
        <span asp-validation-for="To"></span>
    </div>
    <div>
        <label asp-for="Amount"></label>
        <input asp-for="Amount" type="number" step="0.01" />
        <span asp-validation-for="Amount"></span>
    </div>
    <button type="submit">Конвертировать</button>
</form>

@if (Model?.Result != null)
{
    <div>
        <strong>Результат:</strong> @Model.Result
    </div>
}

@{
    ViewData["Title"] = "Конвертер валют";
}

<h2>Конвертер валют</h2>

@if(ViewBag.Error != null)
{
    <div style="color:red">@ViewBag.Error</div>
}

<form method="post" style="margin-top:20px">
    <div>
        <label>Из валюты (например, USD):</label>
        <input type="text" name="from" value="@ViewBag.From" required />
    </div>
    <div>
        <label>В валюту (например, EUR):</label>
        <input type="text" name="to" value="@ViewBag.To" required />
    </div>
    <div>
        <label>Сумма:</label>
        <input type="number" name="amount" value="@ViewBag.Amount" step="0.01" required />
    </div>
    <div style="margin-top:10px">
        <button type="submit">Конвертировать</button>
    </div>
</form>

@if(ViewBag.Result != null)
{
    <h3>Результат: @ViewBag.Result @ViewBag.To</h3>
}